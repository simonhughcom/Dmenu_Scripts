#!/bin/bash

# Dmenu to choose from poweroff, restart or logout

choices="cancel\nsleep\nhybernate\npoweroff\nreboot"
prompt="Please choose:"

choice=$(echo -e "$choices" | dmenu -sb "#ad1616" -p "choose")

case "$choice" in 
    cancel) exit ;;
    sleep) sudo zzz;;
    hybernate) sudo ZZZ;; 
    poweroff) sudo shutdown -h now & ;;
    reboot) sudo reboot & ;;
esac
